<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvNonProfitInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PledgeCardView">
                <!-- Main Content View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/ContentContainer">
                    <TextView
                        android:id="@+id/tvMissionStatementTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTitleStyle"
                        android:text="@string/mission_statement_title"/>
                    <TextView
                        android:id="@+id/tvMissionStatement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTextStyle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PledgeCardView">
                <!-- Main Content View -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/ContentContainer">
                    <TextView
                        android:id="@+id/tvBasicInfoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        style="@style/ContentTitleStyle"
                        android:text="@string/basic_information_title"/>
                    <TextView
                        android:id="@+id/tvAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTextStyle"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tvBasicInfoTitle"
                        android:text="@string/address_label"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTextStyle"
                        android:layout_marginLeft="5dp"
                        android:layout_alignTop="@+id/tvAddressTitle"
                        android:layout_toEndOf="@+id/tvAddressTitle"/>

                    <TextView
                        android:id="@+id/tvCategoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTextStyle"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tvAddress"
                        android:text="@string/category_title"/>
                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ContentTextStyle"
                        android:layout_marginLeft="5dp"
                        android:layout_alignTop="@+id/tvCategoryTitle"
                        android:layout_toEndOf="@+id/tvCategoryTitle"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvGuideStarLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PledgeCardView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/pressable"
                    style="@style/ContentContainer">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/ContentTextStyle"
                        android:text="@string/view_more_in"/>
                    <ImageView
                        android:id="@+id/ivGuideStarLogo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/guidestar_logo"
                        android:layout_marginStart="50dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="30dp"
            app:expandedTitleMarginEnd="30dp"
            android:fitsSystemWindows="true">

            <!--android:fitsSystemWindows="true"-->
            <!--app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"-->
            <!--app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"-->
            <!--app:layout_scrollFlags="scroll|exitUntilCollapsed"-->

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnDonate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_donate_dark"
        android:scaleType="fitXY"
        />
</android.support.design.widget.CoordinatorLayout>