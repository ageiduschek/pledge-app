<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvDonationAmount"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/large_font_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvDonationDate"
        android:layout_margin="@dimen/default_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvNonProfitName"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/tvDonationAmount"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvDonationDate"
        android:layout_margin="@dimen/default_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvDonationDate"
        android:textColor="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tvNonProfitName"
        android:layout_margin="@dimen/default_margin"
        />
</RelativeLayout>