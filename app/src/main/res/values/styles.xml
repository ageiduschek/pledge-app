<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:textViewStyle">@style/PledgeBaseTextView</item>
    </style>

    <style name="PledgeBaseTextView" parent="android:Widget.TextView">
        <item name="android:autoLink">all</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="PledgeCardView" parent="CardView.Light">
        <item name="android:layout_margin">@dimen/card_view_margin</item>
    </style>

    <style name="ContentTitleStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/title_padding_bottom</item>
    </style>
    <style name="ContentTextStyle" parent="Base.TextAppearance.AppCompat.Medium">
    </style>

    <style name="ContentContainer" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:padding">@dimen/content_padding</item>
    </style>
    <dimen name="card_view_margin">5dp</dimen>
    <dimen name="content_padding">10dp</dimen>
    <dimen name="title_padding_bottom">5dp</dimen>
</resources>
