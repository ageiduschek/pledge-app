<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pledgeapp.pledge" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="PledgeClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />
             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="localhost"
                    android:scheme="http"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DonationHistoryActivity"
            android:label="@string/title_activity_donation_history" >
        </activity>
        <activity
            android:name=".activities.LinkEmployerActivity"
            android:label="@string/title_activity_link_employer" >
        </activity>
        <activity
            android:name=".activities.AddPaymentActivity"
            android:label="@string/title_activity_add_payment" >
        </activity>
        <activity
            android:name=".activities.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings" >
        </activity>
        <activity
            android:name=".activities.BrowseActivity"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name=".activities.SignoutActivity"
            android:label="@string/title_activity_browse" >
        </activity>
    </application>

</manifest>
